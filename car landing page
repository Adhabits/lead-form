<script>
// run JS after DOM is ready
document.addEventListener('DOMContentLoaded', function(){
  // ===== Mobile menu (FIX: explicit element refs)
  const hamb = document.getElementById('hamb');
  const mnav = document.getElementById('mnav');
  if (hamb && mnav){
    hamb.addEventListener('click', ()=> mnav.classList.toggle('on'));
    document.querySelectorAll('#mnav a').forEach(a=>a.addEventListener('click',()=>mnav.classList.remove('on')));
  }

  // ===== Reveal & Numbers
  function animateNum(el, to, dur=1300){
    const start=performance.now(), from=0;
    function step(t){
      const p=Math.min(1,(t-start)/dur), ease=1-Math.pow(1-p,3);
      el.textContent = Math.floor(from + ease*to);
      if(p<1) requestAnimationFrame(step);
    }
    requestAnimationFrame(step);
  }
  const io = new IntersectionObserver((entries)=>{
    entries.forEach(e=>{
      if(e.isIntersecting){
        e.target.classList.add('on');
        if(e.target.classList.contains('knum')){
          const n = parseInt(e.target.dataset.count||'0',10);
          animateNum(e.target, isNaN(n)?0:n);
        }
        io.unobserve(e.target);
      }
    });
  },{threshold:0.25});
  document.querySelectorAll('.reveal, .knum').forEach(el=>io.observe(el));

  // ===== Plan buttons
  document.querySelectorAll('.plan-btn').forEach(btn=>{
    btn.addEventListener('click',()=>{
      const plan = btn.dataset.plan || 'Express Wash';
      try{ sessionStorage.setItem('ac_plan', plan); }catch(_){}
      const nameEl = document.getElementById('name');
      if(nameEl) nameEl.focus({preventScroll:true});
      location.hash = '#getstart';
    });
  });

  // ===== Lead save + Pixel tracking + WhatsApp
  const SCRIPT_URL = "https://script.google.com/macros/s/AKfycbznR1Wk3Gn2jztC1ZXnBW4jr52146ctHC3phfdn8Ve3zuwKvCflNIOy_sxfPZNhQbbf/exec"; // change to yours
  const WHATSAPP_TO = "919743140915"; // change to your number

  // UTM capture
  (function persistUTM(){
    const p = new URLSearchParams(location.search);
    const fields = ['utm_source','utm_medium','utm_campaign','utm_content','utm_term','fbclid','gclid'];
    const hasAny = fields.some(k=>p.get(k));
    try{
      if(hasAny){
        const bag = {};
        fields.forEach(k=>{ const v=p.get(k); if(v) bag[k]=v; });
        bag.landing_url = location.href;
        bag.referrer = document.referrer || '';
        bag.ts = new Date().toISOString();
        sessionStorage.setItem('ac_utm', JSON.stringify(bag));
      } else if(!sessionStorage.getItem('ac_utm')){
        sessionStorage.setItem('ac_utm', JSON.stringify({
          landing_url: location.href, referrer: document.referrer || '', ts: new Date().toISOString()
        }));
      }
    }catch(_){}
  })();

  function saveLeadFast(params){
    try{
      const utm = sessionStorage.getItem('ac_utm');
      if(utm) params.append('utm', utm);
      if(navigator.sendBeacon){
        const blob = new Blob([params.toString()], {type:'application/x-www-form-urlencoded'});
        navigator.sendBeacon(SCRIPT_URL, blob);
      }else{
        fetch(SCRIPT_URL, { method:'POST', body: params, mode:'no-cors', keepalive:true }).catch(()=>{});
      }
    }catch(_){ }
  }
  function track(e,d){ try{ fbq && fbq('track', e, d||{}); }catch(_){}}
  function trackCustom(n,d){ try{ fbq && fbq('trackCustom', n, d||{}); }catch(_){}}

  function openWhatsApp(data){
    const {name, phone, carbrand, carmodel, city, service, plan} = data;
    trackCustom('WhatsAppOpen', {plan, service});
    const msg = `Hi AutoCraft,
I want to book a slot.

Name: ${name}
Phone: ${phone}
Car: ${carbrand} ${carmodel}
City: ${city}
Service: ${service}
Package: ${plan}

Please confirm timing & price.`;
    const url = `https://wa.me/${WHATSAPP_TO}?text=${encodeURIComponent(msg)}`;
    window.open(url,'_blank');
  }

  function bindWhatsAppLinks(){
    document.querySelectorAll('a[href*="wa.me"], a[href*="api.whatsapp.com"]').forEach(a=>{
      a.addEventListener('click', ()=> trackCustom('WhatsAppLinkClick'));
    });
  }
  bindWhatsAppLinks();

  // Form submit
  const sendBtn = document.getElementById('sendBtn');
  if (sendBtn){
    sendBtn.addEventListener('click',(e)=>{
      e.preventDefault();
      const carbrand = (document.getElementById('carbrand')||{}).value?.trim() || '';
      const carmodel = (document.getElementById('carmodel')||{}).value?.trim() || '';
      const city     = (document.getElementById('city')||{}).value?.trim() || '';
      const service  = (document.getElementById('service')||{}).value?.trim() || '';
      const name     = (document.getElementById('name')||{}).value?.trim() || '';
      const phone    = (document.getElementById('phone')||{}).value?.trim() || '';
      const plan     = (()=>{
        try{ return sessionStorage.getItem('ac_plan') || service || 'Express Wash'; }catch(_){ return service || 'Express Wash'; }
      })();

      if(!carbrand || !carmodel || !city || !name || !phone){ alert('Please fill all details.'); return; }
      if(!/^\d{10}$/.test(phone)){ alert('Enter 10-digit phone number.'); return; }

      const old = sendBtn.textContent; sendBtn.disabled=true; sendBtn.textContent='Opening WhatsApp...';

      const payload = new URLSearchParams({ name, phone, carbrand, carmodel, city, service, plan });
      saveLeadFast(payload);
      track('Lead', { content_name: plan, content_category: service });
      openWhatsApp({name, phone, carbrand, carmodel, city, service, plan});

      setTimeout(()=>{ sendBtn.disabled=false; sendBtn.textContent=old; }, 1200);
    });
  }
});
</script>

</body>
</html>
